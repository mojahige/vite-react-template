{
  "name": "vite-react-template",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "check:type": "tsc --noEmit",
    "check:lint": "yarn lint",
    "fix": "yarn lint:fix",
    "lint": "yarn lint:eslint && yarn lint:prettier lint:stylelint",
    "lint:fix": "yarn lint:stylelint:fix & yarn lint:eslint:fix && yarn lint:prettier:write",
    "lint:eslint": "eslint './src/**/*.{ts,tsx,js}'",
    "lint:eslint:fix": "eslint --fix './src/**/*.{ts,tsx,js}'",
    "lint:prettier": "prettier --check './src/**/*.{ts,tsx,js}'",
    "lint:prettier:write": "prettier --write './src/**/*.{ts,tsx,js}'",
    "lint:stylelint": "stylelint './src/**/*.css'",
    "lint:stylelint:fix": "stylelint --fix './src/**/*.css'"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "tailwindcss": "^2.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/jest-dom": "^5.13.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.4",
    "postcss": "^8.3.0",
    "prettier": "^2.3.1",
    "react-test-renderer": "^17.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.1.2",
    "vite": "^2.3.5"
  }
}
